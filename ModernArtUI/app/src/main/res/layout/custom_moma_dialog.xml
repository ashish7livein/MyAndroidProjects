<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#4675ff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/visit_website_text_1"
        android:gravity="center"
        android:id="@+id/info1"
        style="@android:style/TextAppearance.Medium"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/visit_website_text_2"
        android:gravity="center"
        android:layout_below="@+id/info1"
        android:id="@+id/info2"
        style="@android:style/TextAppearance.Medium"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info2" android:orientation="horizontal">
        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/info2"
            android:layout_alignLeft="@+id/info2"
            android:gravity="center"
            android:text="Not Now"
            android:background="#4675ff"/>
        <Button
            android:id="@+id/goAhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/info2"
            android:layout_alignRight="@+id/info2"
            android:text="VISIT MOMA"
            android:background="#4675ff"/>

    </LinearLayout>



</RelativeLayout>
